{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.js",
    "prettier.config.js",
    "vite.config.js"
  ],

  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["./src/shared/*"],
      "@/login/*": ["./src/features/login/*"],
      "@/author/*": ["./src/features/author/*"],
      "@/course/*": ["./src/features/course/*"],
      "@/lesson/*": ["./src/features/lesson/*"],
      "@/quiz/*": ["./src/features/quiz/*"],
      "@/section/*": ["./src/features/section/*"],
      "@/user/*": ["./src/features/user/*"],
      "@/integrations/*": ["./src/integrations/*"],
      "@/routes/*": ["./src/routes/*"]
    }
  }
}
